:root{--bg-1:hsl(240, 18%, 96%);--bg-2:hsl(0, 0%, 100%);--cta-text-1:#fff;--text-1:hsl(224, 18%, 12%);--text-2:hsla(224, 18%, 12%, .8);--cta-text-1:hsl(219, 92%, 58%);--cta-text-2:hsl(0, 0%, 100%);--cta-bg-1:hsla(210, 92%, 58%, .1);--cta-bg-2:hsl(219, 92%, 58%)}@media(prefers-color-scheme:dark){:root{--bg-1:hsl(240, 3%, 11%);--bg-2:hsla(0, 0%, 36%, 0.25);--text-1:hsl(0, 0%, 100%);--text-2:hsl(240, 6%, 68%);--cta-text-1:hsl(210, 100%, 52%);--cta-text-2:hsl(0, 0%, 100%);--cta-bg-1:hsla(210, 99%, 52%, .2);--cta-bg-2:hsl(210, 100%, 52%)}}*,*::before,*::after{box-sizing:border-box;margin:0}html{font-size:62.5%;-webkit-text-size-adjust:none;text-size-adjust:none}html:focus-within{scroll-behavior:smooth}body{background-color:var(--bg-1);color:var(--text-1);font-family:-apple-system,BlinkMacSystemFont,segoe ui,Roboto,Oxygen,Ubuntu,Cantarell,open sans,helvetica neue,sans-serif;font-size:2rem;line-height:2.8rem;font-weight:300;text-rendering:optimizeSpeed;min-height:100vh;display:grid;grid-template-rows:auto 1fr auto}main{margin:4rem auto 12rem;padding-left:1.6rem;padding-right:1.6rem;max-width:80ch}p,h1,h2,h3,h4,h5,h6{overflow-wrap:break-word}a:not([class]){text-decoration-skip-ink:auto}img,picture{border-radius:16px;max-width:100%;height:auto;display:block}h1,h2,h3{font-weight:700}h1{font-size:4.8rem;line-height:5.2rem;letter-spacing:-.1px;margin-bottom:1.6rem}h2{font-size:3.2rem;line-height:2.8rem;letter-spacing:.2px}h3{font-size:2.4rem;line-height:1.4;letter-spacing:.2px}p{letter-spacing:.2px;margin:1.6rem 0}p+h2{margin-top:2.8rem}figcaption{margin-top:1.6rem}a{color:var(--cta-text-1);text-decoration:none}a:hover{text-decoration:underline}hr{background-color:rgba(110,110,114,.3);border:none;border-radius:16px;opacity:.7;margin:4rem auto 6rem;width:12rem;height:.2rem}.site-header{display:flex;justify-content:center;align-items:center;margin-bottom:8rem}.logo img{max-width:8rem}.article-header{margin:4rem auto}.article{background-color:var(--bg-2);border-radius:24px;padding:4rem 2.4rem}.article-link{font-size:1.8rem}.article-date,.list-item-article-date{color:var(--text-2);font-size:1.8rem;font-weight:300}.article-btn{font-size:1.8rem}.page-header{text-align:center}.page .list{list-style-type:none;padding-left:0}.list-item{background-color:var(--bg-2);border-radius:24px;padding:.8rem 2.4rem 4rem;margin:12rem auto}.list-item-link{color:inherit}.list-item-link:hover{text-decoration:none}.list-item-footer{display:flex;justify-content:center;margin-top:4.8rem}.cta{font-weight:500;font-size:1.6rem}.list-item-cta{background-color:var(--cta-bg-1);color:var(--cta-text-1);border-radius:16px;display:flex;justify-content:center;align-items:center;gap:4rem;width:100%;padding:1.2rem 4rem;transition:ease-in-out .2s}.list-item-cta:hover{background-color:var(--cta-bg-2);color:var(--cta-text-2)}.main-footer{text-align:center;padding:0 1.6rem}@media screen and (min-width:768px){.article,.page{display:grid;grid-template-columns:1fr 70rem 1fr}.article>*,.page>*{grid-column:2}}@media(prefers-reduced-motion:reduce){html:focus-within{scroll-behavior:auto}*,*::before,*::after{animation-duration:.01ms!important;animation-iteration-count:1!important;transition-duration:.01ms!important;scroll-behavior:auto!important}}